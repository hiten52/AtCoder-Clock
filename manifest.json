{
  "manifest_version": 3,
  "name": "AtCoder Clock",
  "version": "1.0",
  "description": "Displays an AtCoder-style digital clock on webpages.",
  "default_locale": "en",

  "permissions": ["storage"],

  "action": {
    "default_popup": "public/html/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/loader.js"],
      "type": "module"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "public/html/*",
        "public/css/*",
        "src/clock/*.js",
        "assets/images/*",
        "assets/fonts/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}